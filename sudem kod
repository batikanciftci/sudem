#include <stdio.h>
#include <math.h>

int main(){
	
	int n=0,a;
	
	do{

	
	if(n>0){
		printf("The square root of %d is %.2f\n",n,sqrt(n));
 	}
	else if(n<0){
		printf("The square of %d is %.2f\n",n,pow(n,2));
	}
	
	printf("Enter an integer(-9999 to quit):");
	scanf("%d",&n);	
}
	while(n!=-9999);
	return 0;	
}











