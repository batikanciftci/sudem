//113 lab örnek//

#include <stdio.h>
#include <math.h>

void area();
int main(){
	area();
	return 0;
}
void area(){
	int a,b,c;
	double s,alan;
	printf("Enter Triangle's sides: \n");
	scanf("%d%d%d",&a,&b,&c);
	s=(a+b+c)/2.0;
	alan=sqrt(s*(s-a)*(s-b)*(s-c));
	printf("Area of the triangle is: %.2lf\n",alan);
}




#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int sum_digits(int n){
	int ones,tens,hundreds,result;
	ones=n%10;
	tens=(n/10)%10;
	hundreds=n/100;
	result=ones+tens+hundreds;
	return result;
	
}
int main(){
	int num,sum=0;
	printf("enter an integer: ");
	scanf("%d",&num);
	sum=sum_digits(num);
	printf("sum of digits: %d \n",sum);
	return 0;
}










#include <stdio.h>
int main()
{
	int row,col,ui;
	char output='*';
	scanf("%d",&ui);
	for( row=0;row<ui;row++)
	{
		for ()
		for (col=0;col<ui-row;col++)
		{
			printf("%c",output);  
		}
		printf("\n");
	}
		
		return 0;
}



#include<stdio.h>

int main()
{
	int row,num,col=0;
	char output='*';
	printf("soyle: ");
	scanf("%d",&row);
	for(row>0; row!=0;row--)
	{
		for (row>col;col!=row;col++)
		{
			printf("%c",output);  
		}
	}
		printf("\n");
		return 0;
}

#include <stdio.h>
int main()
{
	int row,col,ui;
	char output='*';
	scanf("%d",&ui);
	for( row=0;row<ui;row++)
	{
		for (col=0;col<row+1;col++)
		{
			printf("%c",output);  
		}
		printf("\n");
	}
		
		return 0;
}


#include <stdio.h>
int main()
{
	int row,col,ui,space;
	char output='*';
	scanf("%d",&ui);
	for( row=0;row<ui;row++)
	{
		for (col=0;col<ui-row;col++)
		{
			for (space=0;space!=ui;space++)
			{
				printf(" ");
			}
			printf("%c",output);  
		}
		printf("\n");
	}
		
		return 0;
}

#include <stdio.h>
int main()
{
	int row,col=0;
	char output='*';
	for(row=5;row!=col;col++)
	{
		for(col>0;col<row-1;row--){
			printf("%c",output);  
		}
		printf("\n");
	}
}
